<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/scroll_view"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#eef4ed">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/radioButtonGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="30px"
                android:buttonTint="@color/black"
                android:text="Delivery"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:checked="true"
                tools:ignore="TouchTargetSizeCheck" />


            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:buttonTint="#DFDCD7"
                android:clickable="false"
                android:focusable="false"
                android:text="Pickup"
                android:textColor="#DFDCD7"
                android:textSize="25sp"
                tools:ignore="TouchTargetSizeCheck" />

        </RadioGroup>

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/radioButtonGroup"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mapView2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Your Location :"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/locationTextCoord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="empty"
            android:textColor="#F80404"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/locationTextCoord"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Enter your address:"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="City *:"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/cityEditText"
            android:layout_width="362dp"
            android:layout_height="40dp"
            android:layout_below="@id/cityLabel"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/buildingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityEditText"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Building *:"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/buildingEditText"
            android:layout_width="362dp"
            android:layout_height="40dp"
            android:layout_below="@id/buildingLabel"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/streetLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buildingEditText"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Street *:"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/streetEditText"
            android:layout_width="362dp"
            android:layout_height="40dp"
            android:layout_below="@id/streetLabel"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/floorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/streetEditText"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Floor *:"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/floorEditText"
            android:layout_width="362dp"
            android:layout_height="40dp"
            android:layout_below="@id/floorLabel"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/detailsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/floorEditText"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Additional Details:"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/detailsEditText"
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailsLabel"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="00dp"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shoppingcart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailsEditText"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shoppingcart"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Payment : Cash On Delivery"
            android:textColor="#FD0000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="Total:"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="25dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="25sp"
             />

        <Button
            android:id="@+id/btn_ConfirmOder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Confirm order"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck" />


    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
